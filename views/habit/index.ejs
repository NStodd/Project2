<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs')  %>

<body>
    <%- include('../partials/header.ejs') %>

    <main>
        <div class="habits">
            <% for (habit of habits) { %>
                <div class="habit">
                    <h1><%= habit.name %></h1>
                    
                    <% if (habit.streak) { %>
                        Active Streak!
                    <% } else { %>  
                        Start a new Streak.
                    <% } %> 
                    <form action="/habits/<%= habit._id %>?_method=PUT" method="post">
                        <input type="submit" value="I DID IT!">
                    </form>
                    <form class="delete" action="/habits/<%= habit._id %>?_method=DELETE" method="post">
                        <input id="delete" type="image" name="delete" src="https://static.vecteezy.com/system/resources/previews/000/649/201/original/trash-icon-symbol-sign-vector.jpg">
                    </form>
                </div>
            <% } %>  
        </div>
        <div class="new"><a href="/habits/new"><button> Track a New Habit</button> </a></div>
        <div class="logout"><a href="/user/logout"><button>Logout</button></a></div>
    </main> 
</body>
</html>